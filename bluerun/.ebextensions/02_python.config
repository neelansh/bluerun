container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && django-admin.py migrate --noinput"
    leader_only: true

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "bluerun.settings"
    "PYTHONPATH": "/opt/python/current/app/bluerun:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: bluerun/wsgi.py
    NumProcesses: 3
    NumThreads: 20